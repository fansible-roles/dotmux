# === Tmux Custom Options ===
# C-b is not acceptable, due to emacs, bash, and vim
#unbind-key C-b
set-option -g prefix C-'\'
set-option -g history-limit 100000
set-option -g allow-rename off
set-option -g default-command bash
set-window-option -g mode-keys vi
